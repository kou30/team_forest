@charset "UTF-8";

/* すべてのWebページに適用される */
html {
  font-family: sans-serif;
}

html * {
  box-sizing: border-box;
}

body {
  margin: 0 0 0 0;
  background-color: #eeece9;

}

.wrapper {
  margin: 0 auto 0 auto;
  max-width: 960px;
}

.achievement {
  background-color: #f9f9ee;
}

.catList {
  background-color: #fff9f2;
}

.reserve {
  background-color: #fff9f2;
}

.index {
  background-color: #fff9f2;
}


h2 {
  color: #3f5170;
  font-size: 22px;
  border-bottom: 3px dotted #3f5170;
  margin-top: 20px;
  margin-right: 0px;
  margin-bottom: 20px;
  margin-left: 0px;
  padding-top: 5px;
  padding-right: 5px;
  padding-bottom: 5px;
  padding-left: 5px;
}

p {
  line-height: 1.6;


}

a:link {
  color: #d25833;
}
a:visited {
  color: #d25833;
}
a:hover {
  color: #e3937a;
}
a:active {
  color: #ff6a3b;
}
img {
  max-width: 100%;
  height: auto;
}
/* すべてのページに適用　－ヘッダー－ */
.logo {
  margin: 50px 0 40px 0;
  line-height: 0;
  text-align: center;
}
.nav li {
  display: inline;
  list-style-type: none;
  padding-right: 30px;
}
.nav ul {
  margin: 0 0 0 0;
  padding: 20px 10px 15px 20px;
  background-image: url(../images/menu-bg.png);
  background-repeat: repeat-x;
}

.nav a:link {
  color: #3c454d;
  text-decoration: none;
}
.nav a:visited {
  color: #3c454d;
  text-decoration: none;
}
.nav a:hover {
  color: #7b8dac;
  text-decoration: none;
}
.nav a:active {
  color: #5a9bc0;
  text-decoration: none;
}

/* すべてのページに適用　－フッタ－ */
.footer {
  background-image: url(../images/footer-bg.png);
  background-repeat: no-repeat;
  margin-top: 30px;
  padding: 80px 15px 20px 15px;
  font-size: 12px;
  color: #3f5170;
}

/* 個別のスタイル */
/* index.html */
.keyvisual {
  margin: 15px 0 0 0;
}

.news-item {
  margin: 0;
}
.menu-block1{
	background-image: url(../images/img5.jpg);
}

.menu-block2{
	background-image: url(../images/img6.jpg);
}

.execution{
	text-align:center;
}

/* about.html */
.shop-photo {
  float: left;
  padding: 0 1em 1em 0;
}
.clear{
  clear: both;
}
/* テーブル */
.info {
  border-collapse: collapse;
}
.info th, .info td {
  padding: 8px;
  border: 1px solid #bec2c7;
  text-align: left;
}
.info th {
  background-color: #dde2ed;
  width: 90px;
  color: #3f5170;
  vertical-align: top;
}

/* menu.html */
.menu-item {
  display: flex;
  border-bottom: 1px dashed #bec2c7;
  padding: 20px 8px;
}
.menu-photo {
  margin-right: 30px;
  /* flex: 1 1 auto; */
}
.menu-text {
  flex: 0 0 336px;


}

.text{
	flex: 0 0 336px;

/*ネコ一覧と実績のアンダーラインをpinkに*/
  border-bottom: 1px dashed #ff0080;
}

/*ネコ一覧と実績のボタンを中央寄せ*/
.buttonA{
	text-align: center;
	background: linear-gradient(#fed6e3 0%, #ffaaaa 100%);
	line-height: 50px;

}
.buttonB{
	text-align: center;
	background: linear-gradient(#F7FED6 0%, #ffaaaa 100%);
	line-height: 50px;

}







/* access.html */
.map {
  text-align: center;
}

/* contact.html */
form div {
  padding: 12px;
  border-bottom: 1px dashed #bec2c7;
}
select {
  width: 30em;
}
imput[name="subject"] {
  width: 30em;
}
textarea {
  width: 30em;
  height: 6em;
}
input[type="submit"] {
  margin: 20px 0;
  width: 30em;
}

.user {
	text-align: center;
	font-weight: bold;
	border-radius: 50%;
	width: 100px;
	height:50px;
	color: #FAF0E6;
	background-color: #8B4513;
	font-family: 'BIZ UDPゴシック';
	font-size: 100%;
	border: 1px solid #000;
	overflow:		hidden;
	margin:			10px 8px 10px 16px;
	position:		relative;
};

.user .caption {
	font-size:		130%;
	color:			#fff;

	padding-top:		80px;
	padding-left:		0px;
}

.user .mask {
	width:			100%;
	height:			100%;
	position:		absolute;
	top:			0;
	left:			0;
	opacity:		0;	/* マスクを表示しない */
	background-color:	rgba(0,0,0,0.4);
	-webkit-transition:	all 0.6s ease;
	transition: all 1s;
}
.user:hover .mask {
	opacity:		1;	/* マスクを表示する */
	transform: translate(0,0);
}

.superUser {
	text-align: center;
	font-weight: bold;
	border-radius: 50%;
	width: 100px;
	height:50px;
	color: #FAF0E6;
	background-color: #000088;
	font-family: 'BIZ UDPゴシック';
	font-size: 100%;
	border: 1px solid #000;
	overflow:		hidden;
	margin:			10px 8px 10px 16px;
	position:		relative;
};

.superUser .caption {
	font-size:		130%;
	color:			#fff;

	padding-top:		80px;
	padding-left:		0px;
}

.superUser .mask {
	width:			100%;
	height:			100%;
	position:		absolute;
	top:			0;
	left:			0;
	opacity:		0;	/* マスクを表示しない */
	background-color:	rgba(0,0,0,0.4);
	-webkit-transition:	all 0.6s ease;
	transition: all 1s;
}
.superUser:hover .mask {
	opacity:		1;	/* マスクを表示する */
	transform: translate(0,0);
}


/* スマートフォン向けCSS */
@media (max-width: 767px) {
  /* 全体 - ナビゲーション */
  .wrapper {
    margin: 0 8px;
  }
  .logo {
    margin: 30px 0;
  }
  .log img {
    width: 200px;
  }
  .nav {
    background-color: #dfddda;
  }
  .nav li {
    display: block;
  }
  /* menu.html */
  .menu-item {
    display: block;
  }
  .menu-photo {
    margin-right: 0;
    width: 100%;
  }
  .menu-text {
    width: 100%


  }
  /* about.html - 画像のバンディングを調整 */

  .shop-photo {
    padding-right: 0;
  }

  /* contact.html */
  select {
    width: 100%;
  }
  input[name="subject"] {
    width: 100%;
  }
  textarea {
    width: 100%;
  }
  input[type="submit"] {
    margin: 20px 0;
    width: 100%;
  }
}
